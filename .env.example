# ═════════════════════════════════════════════════════════════════════════
# Environment Configuration
# Copy this to .env.local or .env and fill in actual values
# NEVER commit actual secrets - use this as a template only
# ═════════════════════════════════════════════════════════════════════════

# Environment selection
NODE_ENV=development
ENVIRONMENT=development

# ─────────────────────────────────────────────────────────────────────────
# Database Configuration
# ─────────────────────────────────────────────────────────────────────────
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_USER=midst_dev
DATABASE_PASSWORD=__REPLACE_WITH_SECURE_PASSWORD__
DATABASE_NAME=midst_dev
DATABASE_SSL=false
DATABASE_MAX_CONNECTIONS=20
DATABASE_IDLE_TIMEOUT=30000

# Integration test database (separate from dev)
INTEGRATION_POSTGRES_URL=postgresql://user:password@localhost:5432/midst_test
INTEGRATION_REDIS_URL=redis://localhost:6379/1

# ─────────────────────────────────────────────────────────────────────────
# Redis Configuration
# ─────────────────────────────────────────────────────────────────────────
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_URL=redis://localhost:6379

# ─────────────────────────────────────────────────────────────────────────
# Security & Authentication
# ─────────────────────────────────────────────────────────────────────────
JWT_SECRET=__REPLACE_WITH_STRONG_RANDOM_SECRET_AT_LEAST_32_CHARS__
JWT_EXPIRES_IN=3600
JWT_REFRESH_EXPIRES_IN=604800
PROFILE_KEY_ENC_KEY=__REPLACE_WITH_256_BIT_HEX_KEY_FROM_crypto.randomBytes(32).toString(hex)__

# Encryption for sensitive data
ENCRYPTION_ALGORITHM=aes-256-gcm
ENCRYPTION_KEY_DERIVATION=pbkdf2

# ─────────────────────────────────────────────────────────────────────────
# API Configuration
# ─────────────────────────────────────────────────────────────────────────
API_URL=http://localhost:3001
API_PORT=3001
WEB_URL=http://localhost:3000
ORCHESTRATOR_URL=http://localhost:3002

# ─────────────────────────────────────────────────────────────────────────
# External Services - Job Search
# ─────────────────────────────────────────────────────────────────────────
SERPER_API_KEY=__REPLACE_WITH_SERPER_API_KEY__
SERPER_BASE_URL=https://google.serper.dev

# ─────────────────────────────────────────────────────────────────────────
# External Services - OAuth Integrations
# ─────────────────────────────────────────────────────────────────────────
# GitHub OAuth
GITHUB_OAUTH_CLIENT_ID=__REPLACE_WITH_GITHUB_CLIENT_ID__
GITHUB_OAUTH_CLIENT_SECRET=__REPLACE_WITH_GITHUB_CLIENT_SECRET__
GITHUB_OAUTH_REDIRECT_URI=http://localhost:3000/auth/github/callback

# LinkedIn OAuth
LINKEDIN_OAUTH_CLIENT_ID=__REPLACE_WITH_LINKEDIN_CLIENT_ID__
LINKEDIN_OAUTH_CLIENT_SECRET=__REPLACE_WITH_LINKEDIN_CLIENT_SECRET__
LINKEDIN_OAUTH_REDIRECT_URI=http://localhost:3000/auth/linkedin/callback

# ─────────────────────────────────────────────────────────────────────────
# Analytics
# ─────────────────────────────────────────────────────────────────────────
ANALYTICS_ENDPOINT=http://localhost:3001/analytics
ANALYTICS_API_KEY=__REPLACE_WITH_ANALYTICS_API_KEY__
ANALYTICS_ENABLED=true

# ─────────────────────────────────────────────────────────────────────────
# Email Service (future use)
# ─────────────────────────────────────────────────────────────────────────
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=__REPLACE_WITH_SMTP_USER__
SMTP_PASSWORD=__REPLACE_WITH_SMTP_PASSWORD__
MAIL_FROM=noreply@in-midst-my-life.dev

# ─────────────────────────────────────────────────────────────────────────
# Logging
# ─────────────────────────────────────────────────────────────────────────
LOG_LEVEL=debug
LOG_FORMAT=text
LOG_COLORIZE=true

# ─────────────────────────────────────────────────────────────────────────
# CORS & Security
# ─────────────────────────────────────────────────────────────────────────
CORS_ORIGINS=http://localhost:3000,http://localhost:3001
CSRF_PROTECTION=false
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000

# ─────────────────────────────────────────────────────────────────────────
# Feature Flags
# ─────────────────────────────────────────────────────────────────────────
FEATURE_HUNTER_PROTOCOL=true
FEATURE_BATCH_APPLICATIONS=true
FEATURE_INVERTED_INTERVIEW=true
FEATURE_COMMUNITY=true
FEATURE_MOCK_DATA=true
FEATURE_ANALYTICS=false

# ─────────────────────────────────────────────────────────────────────────
# Storage
# ─────────────────────────────────────────────────────────────────────────
STORAGE_TYPE=local
STORAGE_LOCAL_PATH=./storage
STORAGE_RETENTION_DAYS=7

# ─────────────────────────────────────────────────────────────────────────
# Monitoring & Observability
# ─────────────────────────────────────────────────────────────────────────
MONITORING_ENABLED=false
METRICS_PORT=9090
TRACING_ENABLED=false
TRACING_SAMPLE_RATE=1.0
