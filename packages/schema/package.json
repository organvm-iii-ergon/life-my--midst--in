{
  "name": "@in-midst-my-life/schema",
  "version": "0.1.0",
  "description": "Zod schemas and TypeScript types for the in-midst-my-life interactive CV system. Defines identity, profiles, masks, epochs, stages, and verification primitives.",
  "keywords": [
    "schema",
    "zod",
    "typescript",
    "cv",
    "resume",
    "identity",
    "validation",
    "types"
  ],
  "homepage": "https://github.com/4jp/life-my--midst--in#readme",
  "bugs": {
    "url": "https://github.com/4jp/life-my--midst--in/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/4jp/life-my--midst--in.git",
    "directory": "packages/schema"
  },
  "license": "MIT",
  "author": "4jp",
  "type": "module",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    },
    "./package.json": "./package.json"
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "README.md",
    "CHANGELOG.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsup",
    "build:types": "tsc --emitDeclarationOnly",
    "clean": "rm -rf dist",
    "prepublishOnly": "pnpm run clean && pnpm run build",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "COVERAGE=true vitest run",
    "typecheck": "tsc --noEmit"
  },
  "peerDependencies": {
    "zod": "^3.22.0"
  },
  "peerDependenciesMeta": {
    "zod": {
      "optional": false
    }
  },
  "devDependencies": {
    "tsup": "^8.5.1",
    "typescript": "^5.3.3",
    "vitest": "^3.0.9",
    "zod": "^3.22.4"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  }
}
