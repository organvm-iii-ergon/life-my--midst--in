{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*"
      ]
    },
    "types": [
      "node",
      "react",
      "react-dom",
      "vitest/globals",
      "@testing-library/jest-dom"
    ],
    "allowJs": true,
    "noEmit": true,
    "isolatedModules": true,
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.test.ts",
    "src/**/*.test.tsx",
    ".next/types/**/*.ts",
    "vitest.d.ts"
  ],
  "exclude": [
    "node_modules",
    ".next",
    "dist"
  ]
}
