{
  "$schema": "https://turbo.build/schema.json",
  "pipeline": {
    "dev": {
      "cache": false,
      "persistent": true
    },
    "lint": {
      "outputs": []
    },
    "typecheck": {
      "outputs": []
    },
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", "build/**", ".next/**"]
    },
    "test": {
      "dependsOn": ["^test"],
      "outputs": ["coverage/**", "test-results/**"]
    },
    "integration": {
      "dependsOn": ["^integration"],
      "outputs": ["coverage/**", "test-results/**"],
      "cache": false,
      "env": ["INTEGRATION_POSTGRES_URL", "INTEGRATION_REDIS_URL"]
    },
    "e2e": {
      "dependsOn": ["^build"],
      "outputs": ["test-results/**", "playwright-report/**"],
      "cache": false,
      "env": ["E2E_BASE_URL", "E2E_API_URL"]
    }
  }
}
