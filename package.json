{
  "name": "in-midst-my-life",
  "version": "1.0.0",
  "private": true,
  "description": "Interactive CV/resume system with mask-based identity filtering and narrative generation",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/4444J99/life-my--midst--in.git"
  },
  "homepage": "https://github.com/4444J99/life-my--midst--in#readme",
  "bugs": {
    "url": "https://github.com/4444J99/life-my--midst--in/issues"
  },
  "keywords": [
    "cv",
    "resume",
    "identity",
    "masks",
    "portfolio",
    "verifiable-credentials"
  ],
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "test": "turbo run test",
    "test:coverage": "COVERAGE=true turbo run test",
    "integration": "turbo run integration",
    "e2e": "turbo run e2e",
    "lint": "turbo run lint",
    "typecheck": "turbo run typecheck",
    "prepare": "husky"
  },
  "devDependencies": {
    "@commitlint/cli": "20.4.1",
    "@commitlint/config-conventional": "20.4.1",
    "@eslint/eslintrc": "^3.3.3",
    "@eslint/js": "^9.39.2",
    "@lhci/cli": "^0.14.0",
    "@typescript-eslint/eslint-plugin": "^8.55.0",
    "@typescript-eslint/parser": "^8.55.0",
    "@vitest/coverage-v8": "^4.0.18",
    "eslint": "^9.39.2",
    "eslint-config-next": "16.1.6",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.5",
    "globals": "^16.5.0",
    "husky": "9.1.7",
    "lint-staged": "16.2.7",
    "prettier": "^3.1.1",
    "turbo": "^1.11.0",
    "typescript": "^5.3.3",
    "vite": "^6.0.0",
    "vitest": "^4.0.18"
  },
  "dependencies": {
    "fastify": "^5.7.3"
  },
  "pnpm": {
    "overrides": {
      "lodash-es": ">=4.17.23"
    }
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "all",
    "semi": true,
    "printWidth": 100
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ],
    "rules": {
      "header-max-length": [
        2,
        "always",
        72
      ],
      "type-enum": [
        2,
        "always",
        [
          "feat",
          "fix",
          "docs",
          "style",
          "refactor",
          "perf",
          "test",
          "build",
          "ci",
          "chore",
          "revert"
        ]
      ],
      "scope-enum": [
        1,
        "always",
        [
          "api",
          "web",
          "orchestrator",
          "schema",
          "core",
          "content-model",
          "design-system",
          "infra",
          "ci",
          "deps"
        ]
      ]
    }
  }
}
