{
  "name": "in-midst-my-life",
  "version": "0.1.0",
  "private": true,
  "description": "Interactive CV/resume system with mask-based identity filtering and narrative generation",
  "license": "MIT",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "test": "turbo run test",
    "test:coverage": "COVERAGE=true turbo run test",
    "integration": "turbo run integration",
    "e2e": "turbo run e2e",
    "lint": "turbo run lint",
    "typecheck": "turbo run typecheck",
    "prepare": "husky"
  },
  "devDependencies": {
    "@commitlint/cli": "20.4.1",
    "@commitlint/config-conventional": "20.4.1",
    "@lhci/cli": "^0.14.0",
    "@typescript-eslint/eslint-plugin": "^8.54.0",
    "@typescript-eslint/parser": "^8.54.0",
    "@vitest/coverage-v8": "^3.0.9",
    "eslint": "^10.0.0",
    "eslint-config-next": "16.1.6",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.5",
    "husky": "9.1.7",
    "lint-staged": "16.2.7",
    "prettier": "^3.1.1",
    "turbo": "^1.11.0",
    "typescript": "^5.3.3",
    "vite": "^6.0.0"
  },
  "dependencies": {
    "fastify": "^5.7.3"
  },
  "pnpm": {
    "overrides": {
      "lodash-es": ">=4.17.23"
    }
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
